{
  "manifest_version": 3,
  "name": "BarCat - Arc-Style Sidebar",
  "version": "2.0.0",
  "description": "Arc browser-style sidebar with spaces, tab groups, pinned tabs, and drag & drop management",
  "permissions": [
    "tabs",
    "tabGroups",
    "sidePanel",
    "storage",
    "bookmarks",
    "alarms",
    "commands",
    "favicon",
    "scripting",
    "search",
    "topSites",
    "history",
    "clipboardWrite"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {},
  "chrome_url_overrides": {
    "newtab": "spotlight/newtab.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "spotlight/overlay.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.js",
        "onboarding.js",
        "installation-onboarding.js",
        "assets/*",
        "_favicon/*",
        "spotlight/shared/*"
      ],
      "matches": [
        "<all_urls>"
      ],
      "extension_ids": [
        "*"
      ]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle CatBar sidebar"
    },
    "quickPinToggle": {
      "suggested_key": {
        "default": "Alt+D"
      },
      "description": "Quick Pin/Unpin Tab"
    },
    "NextTabInSpace": {
      "description": "Navigate to next tab in space"
    },
    "PrevTabInSpace": {
      "description": "Navigate to previous tab in space"
    },
    "toggleSpotlight": {
      "suggested_key": {
        "default": "Alt+L"
      },
      "description": "Open Spotlight"
    },
    "toggleSpotlightNewTab": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "New Tab"
    },
    "copyCurrentUrl": {
      "description": "Copy current tab URL"
    }
  },
  "options_page": "options.html"
}
